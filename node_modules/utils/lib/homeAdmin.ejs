<%- include ('layout/header') %>
<%- include ('layout/navAdmin') %>
<head>
    <style>
      .welcome-text {
        text-align: center;
        color: rgb(31, 31, 31);
        padding-top: 20px; /* Menambahkan padding atas untuk teks */
        max-width: 500px; /* Lebar maksimum teks */
        width: 50%; /* Lebar garis bawah 100% untuk mengisi keseluruhan lebar konten */
        margin: 0 auto; /* Untuk mengatur agar elemen berada di tengah */
      }
  
      .welcome-text::after {
        content: "";
        display: block;
        width: 20%; /* Lebar garis bawah 100% untuk mengisi keseluruhan lebar konten */
        margin: 10px auto; /* Menambahkan margin atas dan bawah */
        border-bottom: 2px solid rgb(169, 223, 245); /* Garis bawah */
      }
      .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
     
      }
      
      .card-container {
        display: flex;
        flex-wrap: wrap; /* Menggunakan flex-wrap untuk baris baru jika tidak cukup lebar */
        justify-content: center;
        gap: 20px; /* Menambahkan jarak antara card */
      }
  
      .card {
        box-shadow: 0 4px 8px 0 rgba(54, 50, 50, 0.2);
        transition: 0.3s;
        width: 30%;
        max-width: 200px;
        min-width: 100px;
        height: auto;
        background-color: rgb(255, 255, 255);
        color: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center; 
        text-align: center;
        padding: 17px;
        margin-bottom: 10px; /* Memberi jarak di bawah setiap card */
        margin-right: 20px;
        margin-top: 45px;
      }
  
      .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
      }
  
      .container {
        padding: 10px;
      }
  
      .custom-icon {
        font-size: 50px;
        margin-bottom: 20px;
        color: rgb(87, 187, 253);
      }
      .button {
        border-radius: 0  ;
        background-color: rgb(0, 60, 75);
        border: none;
        color: #FFFFFF;
        text-align: center;
        font-size: 15px;
        padding: 5px;
        width: 150px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 2px;
      }
  
      .button span {
        cursor: pointer;
        display: inline-block;
        position: relative;
        transition: 0.5s;
      }
  
      .button span:after {
        content: '\00bb';
        position: absolute;
        opacity: 0;
        top: 0;
        right: -20px;
        transition: 0.5s;
      }
  
      .button:hover span {
        padding-right: 25px;
      }
  
      .button:hover span:after {
        opacity: 1;
        right: 0;
      }
    </style>
</head>
<div class="content-wrapper" style="background-color: rgb(240, 240, 240);">
    <div class="content">
        <h4 class="welcome-text">Welcome Admin</h4>
        <div class="card-container">
          <div class="card">
            <div class="container">
              <i class="fa fa-book custom-icon" style="color: rgb(31, 31, 31)"></i>
              <button class="button"><span>Barang</span></button>
            </div>
          </div>
          <div class="card">
            <div class="container">
              <i class="fas fa-user icon custom-icon" style="color: rgb(31, 31, 31)"></i>
              <button class="button"><span>Kasir </span></button>
            </div>
          </div>
          <div class="card">
            <div class="container"> 
              <i class="fa fa-cart-arrow-down custom-icon" style="color: rgb(31, 31, 31)"></i>
              <button class="button"><span>Laporan Stok </span></button>
            </div>
          </div>
        </div>
          <div class="card">
            <div class="container">
              <i class="fa fa-history icon custom-icon" style="color: rgb(31, 31, 31)"></i>
              <button class="button"><span>Laporan Penjualan </span></button>
            </div>
        </div>
        <div class="card">
            <div class="container">
              <i class="fa fa-history icon custom-icon" style="color: rgb(31, 31, 31)"></i>
              <button class="button"><span>Laporan Member </span></button>
            </div>
        </div>
      </div>
</div>

<%- include ('layout/footer') %>
