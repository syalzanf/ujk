<%- include ('layout/header') %>
<%- include ('layout/navAdmin') %>

<div class="content-wrapper" style="background-color: rgb(240, 240, 240);">
        <div class="container-fluid py-4">
            <h3>Laporan Penjualan</h3><br>
            
            <div class="card">
                <div class="card-header" style="display: flex; justify-content: space-between;">
                <h6>Tabel Penjualan Barang</h6>
                <a href="/lapPenjualan/print" class="btn btn-primary"><i class="fas fa-print"></i> Print</a>
            </div>
            <div class = "card-body">   
            <div class="table-responsive">
               
                <table id="penjualanTable"  class="table table-bordered table-striped table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>Tanggal</th>
                            <th>Kode Transaksi</th>
                            <th>Kasir</th>
                            <th>Kode Barang</th>
                            <th>Nama Barang</th>
                            <th>Qty</th>
                            <th>Harga</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% penjualan.forEach(function(item) { %>
                            <tr>
                                <td><%= item.tgl %></td>
                                <td><%= item.kode_transaksi %></td>
                                <td><%= item.kasir %></td>
                                <td><%= item.kode_barang %></td>
                                <td><%= item.nama_barang %></td>
                                <td><%= item.qty %></td>
                                <td><%= item.harga %></td>
                                <td><%= item.total %></td>
                            </tr>
                        <% }); %>
                    </tbody>                    
                    <tfoot>
                        <tr>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
</div>

</div>
</div>
 

<script>
    $(document).ready(function () {
      $('#penjualanTable').DataTable();
    });
</script>


<%- include ('layout/footer') %>